{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "jsxFactory": "createElement",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@utils": ["src/utils"],
      "@constants": ["src/constants"],
      "@data": ["public/data"]
    }
  },
  "include": ["./src/**/*", "./global.d.ts"]
}
